<div>
  <div>
    <h1>
      Board #<%= @the_board.name %> details
    </h1>
<hr>

<h2>Add a new post</h2>
<form action="/insert_post" method="post" >
  <div>
  <label for="title_field">Title</label>
  <input id="title_field" type="text" name="title">
  </div>

  <div>
  <label for="body_field">Body</label>
  <textarea id="body_field" type="text" name="body" cols="30" rows="10"></textarea>
  </div>

  <div>
  <label for="expires_on_field">Expires on</label>
  <input id="expires_on_field" type="date" name="expires_on">
  </div>

  <div>
  <label for="board_id">Board id</label>
  <input id="board_id" type="hidden" name="board_id" value="<%= @the_board.id %>">
  </div>

<button>
  Add post
</button>
</form>

<h2>Active posts</h2>
<% matching_posts = Post.where({:board_id=> @the_board.id}) %>

<table>
<tr>
  <th>Title</th>
  <th>Body</th>
  <th>Posted on</th>
  <th>Expires on</th>
</tr>
<% matching_posts.each do |a_post| %>
<tr>
  <th><%= a_post.title %></th>
  <th><%= a_post.body %></th>
  <th><%= a_post.created_at %></th>
  <th><%= a_post.expires_on %></th>
</tr>
</table>


<% end%>
<hr>
